# Environment variables for Approval Workflow System

# Database Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/approval_workflow_development?authSource=admin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_DOMAIN=gmail.com
FROM_EMAIL=noreply@yourcompany.com

# Application Configuration
APPROVAL_URL=http://localhost:3000
RAILS_ENV=development
PORT=3000

# Geolocation Service
GEOIP_DATABASE_PATH=/usr/share/GeoIP/GeoLiteCity.dat

# Webhook Configuration (optional)
WEBHOOK_URL=https://your-webhook-endpoint.com/notifications

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
